<%= form_for(@player_spell) do |f| %>

<div class="modal-body">

	<% if @player_spell.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@player_spell.errors.count, "error") %> prohibited this player_spell from being saved:</h2>

		<ul>
			<% @player_spell.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<%= f.hidden_field :player_id %>

	<div class="form-group">
		<%= f.select :spell_id, Spell.all.map{ |s| [s.name, s.id] }, {include_blank: '-'}, {class: 'form-control input-lg focus-here'} %>
	</div>
	<div class="form-group">
		<%= f.label :level %>
		<%= f.select :level, (1..9).map{ |i| [i,i] }.unshift(['Class', -1], ['Cantrip', 0]), {}, {class: 'form-control'} %>
	</div>

</div>

<footer class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
	<%= f.submit nil, class: 'btn btn-primary' %>
</footer>

<% end %>
