<%= form_for [@player, @weapon] do |f| %>

<div class="modal-body">

	<% if @weapon.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@weapon.errors.count, "error") %> prohibited this weapon from being saved:</h2>

		<ul>
			<% @weapon.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<%= f.hidden_field :player_id %>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control focus-here' %>
	</div>
	<div class="form-group">
		<%= f.label :damage %>
		<%= f.text_field :damage, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label :attack, 'Attack Bonus' %>
		<%= f.number_field :attack, class: 'form-control' %>
	</div>

</div>

<footer class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
	<%= f.submit nil, class: 'btn btn-primary' %>
</footer>

<% end %>
