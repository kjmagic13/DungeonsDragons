<tr class="text-center">
	<td class="text-muted text-left">
		<i class="fa fa-fw fa-arrows-v"></i>
	</td>
	<td>
		<%= link_to weapon.name, edit_player_weapon_path(@player, weapon), data: { toggle: :modal, target: '#defaultModal' } %>
	</td>
	<td>
		<%= weapon.damage %>
	</td>
	<td>
		<%= weapon.attack %>
	</td>
	<td class="text-right">
		<%= link_to raw('<i class="fa fa-fw fa-remove text-warning"></i>'), [@player, weapon], method: :delete, data: { confirm: 'Are you sure?' } %>
	</td>
</tr>
