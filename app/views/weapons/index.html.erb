<% if @player.weapons.any? %>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th></th>
			<th class="text-center">Name</th>
			<th class="text-center">Damage</th>
			<th class="text-center">Atk. Bonus</th>
			<th></th>
		</tr>
	</thead>
	<tbody id="weapons" class="sortable">
		<%= render @player.weapons %>
	</tbody>
</table>

<% else %>

<div class="list-group text-center">
	<%= link_to 'Add a Weapon', new_player_weapon_path(@player), class: 'list-group-item', data: { toggle: :modal, target: '#defaultModal' } %>
</div>

<% end %>
