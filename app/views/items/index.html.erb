<% if @player.items.any? %>

<table class="table table-striped table-condensed">
	<thead>
		<tr>
			<th></th>
			<th class="text-center">Name</th>
			<th class="text-center">Qty.</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<%= render @player.items %>
	</tbody>
</table>

<% else %>

<div class="list-group text-center">
	<%= link_to 'Add an Item', new_player_item_path(@player), class: 'list-group-item', data: { toggle: :modal, target: '#defaultModal' } %>
</div>

<% end %>
