<p id="notice"><%= notice %></p>

<%= link_to 'New Player', new_player_path, class: 'btn btn-success pull-right' %>
<%= content_tag :h2, 'Players' %>

<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Rank</th>
				<th>Class name</th>
				<th>Race</th>
				<th>Alignment</th>
				<th>XP</th>
				<th colspan="2"></th>
			</tr>
		</thead>

		<tbody>
			<% @players.each do |player| %>
			<tr>
				<td><%= link_to player.name, player %></td>
				<td><%= player.rank %></td>
				<td><%= player.class_name %></td>
				<td><%= player.race %></td>
				<td><%= player.alignment %></td>
				<td><%= player.xp %></td>
				<td><%= link_to 'Edit', edit_player_path(player) %></td>
				<td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
